<div class="row">

    <div class="col-lg-12">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="uil uil-message me-3"></i>Sayfalar</h5>
            </div><!-- end card-header -->
            <div class="card-body">
                <a asp-controller="Page" asp-action="Add" class="btn btn-primary">Yeni Ekle</a>

                <table id="tblPages" class="table table-striped table-bordered">
                </table>

            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>

</div>




@section Scripts{


    <script>

    

        var DataTable;
        $("#tblPages").DataTable({
            ajax: '/Admin/Page/GetAll',
            columns: [
                { data: 'id', title: 'ID' },
                { data: 'name', title: 'Başlık' },
                { data: 'slug', title: 'Slug' },
                {
                    data: 'pictureCount', title: 'Fotolar', render: function (data, type, row) {

                        return `<a href="/Admin/Page/Pictures/?pageId=${row.id}" class="btn btn-sm btn-primary">${data}</a>`;

                    }
                },
               
               { data: 'viewCount', title: 'Görüntülenme' }
            ]
        });



    </script>
}